{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block body %}

<table>
    <th>Nom</th>
    <th>Prénom</th>
    <th>Administrateur</th>
    <th>Responsable</th>
    <th></th>
        {% for key, user in users %}
            <tr>
                <td>{{ user.lastname }}</td>
                <td>{{ user.firstname }}</td>
                <td>
                    {% for role in user.roles %}
                        {% if role == 'ROLE_ADMIN' %} 
                            A
                        {% endif %}
                    {% endfor %}
                </td>
                <td>
                    {% for role in user.roles %}
                        {% if role == 'ROLE_RESPONSIBLE' %} 
                            R
                        {% endif %}
                    {% endfor %}
                </td>
                <td><a href="{{ path('user_detail', {slug:user.slug}) }}">Détail</a></td>
            </tr>
        {% endfor %}
</table>

{% if is_granted('ROLE_ADMIN') %}
    <hr>
    <button><a href="{{ path('user_new') }}">Ajouter un utilisateur</a></button>
{% endif %}

{% endblock %}