{% extends 'base.html.twig' %}

{% block title %}Modifier {{ name }}{% endblock %}

{% block body %}

{# affichage des lignes seulement si l'utilisateur a le r√¥le admin #}
{% if is_granted('ROLE_ADMIN') %}
    {{ form_start(form_user_edit) }}
        {{ form_row(form_user_edit.firstname) }}
        {{ form_row(form_user_edit.lastname) }}
        {{ form_row(form_user_edit.email) }}
        {{ form_row(form_user_edit.roles) }}
    {# ne pas renvoyer le reste du formulaire #}
    {{ form_end(form_user_edit, {'render_rest': false}) }}
{% endif %}

{# affichage des lignes seulement si l'id de l'utilisateur sont identiques #}
{% if app.user.id == userDetailId %}
    {{ form_start(form_user_edit) }}
        {{ form_row(form_user_edit.password) }}
    {{ form_end(form_user_edit, {'render_rest': false}) }}
{% endif %}

<hr>
<a href="{{ path('user_detail', {id:userDetailId}) }}">Retour</a>



{% endblock %}