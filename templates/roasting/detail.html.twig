{% extends 'base.html.twig' %}

{% block title %}Nearby Coffee - {{ roasting.name }}{% endblock %}

{% block body %}

<p>{{ roasting.name }}</p>
<table>
    <th>Liste des cafés {{ roasting.name }}</th>

        {% for coffee in coffees %}
            <tr>
                <td>{{ coffee.name }}</td>
            </tr>
        {% endfor %}
        
        <tr>
            <td>Total: {{ coffeesNumber }}</td>
        </tr>
</table>



{% if is_granted('ROLE_ADMIN') %}
    <button><a href="{{ path('roasting_edit', {id:roasting.id}) }}">Modifier</a></button>
    <button><a href="{{ path('roasting_delete', {id:roasting.id}) }}">Supprimer</a></button>
{% endif %}

<hr>
<a href="{{ path('roasting_list') }}">Retour à la liste des torréfactions</a>

{% endblock %}