{% block title %}Nearby Coffee - Torr√©factions{% endblock %}
{% block subtitle %}TORREFACTIONS{% endblock %}

{% block body %}

{% if is_granted('ROLE_ADMIN') %}
<a class="text-reset padding_4" href="{{ path('roasting_new') }}">
    <button class="button_add p-2 font_bold padding_4">Ajouter</button>
</a>
{% endif %}

<ul class="list-group list-group-flush pt-4 ">
